      ))}
    </div>
    
    <!-- Press Kit Link -->
    <div class="mt-16 pt-8 border-t border-white/10">
      <a 
        href="#"
        class="inline-flex items-center gap-2 text-sm tracking-[0.2em] uppercase text-muted hover:text-white transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        {t(lang, 'contact.presskit')}
      </a>
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="py-8 px-6 text-center text-muted text-sm">
  <p>{t(lang, 'footer.rights')}</p>
</footer>
