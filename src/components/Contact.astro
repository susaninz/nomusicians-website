---
import type { Lang } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const email = 'mail@nomusicians.com';

// Links from Taplink
const socialLinks = [
  { name: 'Instagram', url: 'https://instagram.com/nomusicians/', icon: 'instagram' },
  { name: 'YouTube', url: 'https://www.youtube.com/watch?v=PzFOKI7Ezl0', icon: 'youtube' },
  { name: 'Telegram', url: 'https://t.me/nomusicians', icon: 'telegram' },
  { name: 'VK', url: 'https://vk.com/nomusicians', icon: 'vk' },
  { name: 'Facebook', url: 'https://www.facebook.com/nomusiciansband', icon: 'facebook' },
  { name: 'SoundCloud', url: 'https://soundcloud.com/nomusicians', icon: 'soundcloud' },
];
---

<section id="contact" class="py-24 px-6">
  <div class="max-w-2xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-light tracking-wide mb-8">
      {t(lang, 'contact.title')}
    </h2>
    
    <!-- Email -->
    <div class="mb-12">
      <p class="text-muted text-sm tracking-[0.2em] uppercase mb-2">{t(lang, 'contact.booking')}</p>
      <a 
        href={`mailto:${email}`}
        class="text-2xl md:text-3xl font-light text-white no-underline hover:opacity-70 transition-opacity"
      >
        {email}
      </a>
    </div>
    
    <!-- Social Links -->
    <div class="flex flex-wrap justify-center gap-8">
      {socialLinks.map(link => (
        <a 
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="text-muted hover:text-white transition-colors"
          aria-label={link.name}
        >
