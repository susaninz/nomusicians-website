---
import type { Lang } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  currentLang: Lang;
}

const { currentLang } = Astro.props;

// Определяем, находимся ли на главной странице
const pathname = Astro.url.pathname;
const isHomePage = pathname === '/' || pathname === '/en/' || pathname === '/cn/';

// Базовый путь главной для текущего языка
const homeBase = currentLang === 'ru' ? '' : `/${currentLang}`;

// Функция для генерации ссылки
function getNavHref(anchor: string): string {
  // Для /people добавляем языковой префикс
  if (anchor === '/people') {
    return currentLang === 'ru' ? '/people' : `/${currentLang}/people`;
  }
  if (anchor.startsWith('/')) return anchor; // Другие абсолютные ссылки не меняем
  return isHomePage ? anchor : `${homeBase}/${anchor}`;
}

const langLinks = {
  ru: '/',
  en: '/en/',
  cn: '/cn/',
};

const navItems = [
  { key: 'nav.about' as const, href: '#about' },
  { key: 'nav.releases' as const, href: '#releases' },
  { key: 'nav.projects' as const, href: '#projects' },
  { key: 'nav.watch' as const, href: '#watch' },
  { key: 'nav.people' as const, href: '/people' },
  { key: 'nav.contact' as const, href: '#contact' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header" style="padding-top: env(safe-area-inset-top);">
  <nav class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
    <!-- Logo (hidden on hero, visible on scroll) -->
    <a 
      href={langLinks[currentLang]} 
      class="text-white text-lg tracking-[0.12em] uppercase opacity-0 transition-opacity duration-300" 
      id="header-logo" 
      style="font-family: var(--font-logo);"
    >
      Nomusicians
    </a>
    
    <!-- Navigation + Language Switcher -->
    <div class="flex items-center gap-6 text-sm tracking-wider">
      <!-- Music Platforms + Main Navigation -->
      <div class="hidden md:flex items-center gap-4">
        <!-- Music Platform Links -->
        <div class="flex items-center gap-3 mr-2">
          <!-- Apple Music — бесцветная, цветная при ховере -->
          <a href="https://music.apple.com/artist/nomusicians" target="_blank" rel="noopener noreferrer" class="opacity-60 hover:opacity-100 transition-opacity group" aria-label="Apple Music">
            <!-- Бесцветная -->
            <svg class="w-5 h-5 block group-hover:hidden text-muted" fill="currentColor" viewBox="0 0 48 48">
              <rect x="0" y="0" width="48" height="48" rx="10"/>
              <path d="M35 12.5v18.8c0 3.5-2.8 5.2-5.5 5.2-2.7 0-4.5-1.7-4.5-4 0-2.5 2-4.2 4.5-4.2.8 0 1.7.2 2.5.5V16.5l-12 2.7v16.3c0 3.5-2.8 5.2-5.5 5.2-2.7 0-4.5-1.7-4.5-4 0-2.5 2-4.2 4.5-4.2.8 0 1.7.2 2.5.5V15l15-3.5c.8-.2 1.5-.2 2 .2s1 1 1 1.8z" fill="#0a0a0a"/>
            </svg>
            <!-- Цветная при ховере -->
            <svg class="w-5 h-5 hidden group-hover:block" viewBox="0 0 48 48">
              <defs>
                <linearGradient id="amGrad" x1="0%" y1="100%" x2="100%" y2="0%" gradientUnits="objectBoundingBox">
                  <stop offset="0%" stop-color="#FA233B"/>
                  <stop offset="100%" stop-color="#FB5C74"/>
                </linearGradient>
              </defs>
              <rect x="0" y="0" width="48" height="48" rx="10" fill="url(#amGrad)"/>
              <path d="M35 12.5v18.8c0 3.5-2.8 5.2-5.5 5.2-2.7 0-4.5-1.7-4.5-4 0-2.5 2-4.2 4.5-4.2.8 0 1.7.2 2.5.5V16.5l-12 2.7v16.3c0 3.5-2.8 5.2-5.5 5.2-2.7 0-4.5-1.7-4.5-4 0-2.5 2-4.2 4.5-4.2.8 0 1.7.2 2.5.5V15l15-3.5c.8-.2 1.5-.2 2 .2s1 1 1 1.8z" fill="#FFFFFF"/>
            </svg>
          </a>
          
          <!-- Spotify — бесцветная, зелёная при ховере -->
          <a href="https://open.spotify.com/artist/nomusicians" target="_blank" rel="noopener noreferrer" class="opacity-60 hover:opacity-100 transition-opacity group" aria-label="Spotify">
            <svg class="w-5 h-5 text-muted group-hover:text-[#1DB954] transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
            </svg>
          </a>
          
          <!-- Яндекс Музыка — бесцветная, цветная при ховере -->
          <a href="https://music.yandex.ru/artist/nomusicians" target="_blank" rel="noopener noreferrer" class="opacity-60 hover:opacity-100 transition-opacity group" aria-label="Яндекс Музыка">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class="w-5 h-5 text-muted" aria-hidden="true">
              <!-- Монохромная версия -->
              <g class="group-hover:opacity-0 transition-opacity duration-150" fill="currentColor">
                <circle cx="20" cy="28" r="16" />
                <circle cx="20" cy="28" r="9" />
                <rect x="26" y="8" width="4" height="22" rx="2" />
                <polygon points="30,4 40,4 40,12 30,9" />
              </g>
              <!-- Цветная версия -->
              <g class="opacity-0 group-hover:opacity-100 transition-opacity duration-150">
                <circle cx="20" cy="28" r="16" fill="#FFCC00" />
                <circle cx="20" cy="28" r="9" fill="#FF3333" />
                <rect x="26" y="8" width="4" height="22" rx="2" fill="#FF3333" />
                <polygon points="30,4 40,4 40,12 30,9" fill="#FF3333" />
              </g>
            </svg>
          </a>
          
          <!-- YouTube Music — бесцветная, красная при ховере -->
          <a href="https://music.youtube.com/channel/nomusicians" target="_blank" rel="noopener noreferrer" class="opacity-60 hover:opacity-100 transition-opacity group" aria-label="YouTube Music">
            <svg class="w-5 h-5 text-muted group-hover:text-[#FF0000] transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.376 0 0 5.376 0 12s5.376 12 12 12 12-5.376 12-12S18.624 0 12 0zm0 19.104c-3.924 0-7.104-3.18-7.104-7.104S8.076 4.896 12 4.896s7.104 3.18 7.104 7.104-3.18 7.104-7.104 7.104zm0-13.332c-3.432 0-6.228 2.796-6.228 6.228S8.568 18.228 12 18.228 18.228 15.432 18.228 12 15.432 5.772 12 5.772zM9.684 15.54V8.46L15.816 12l-6.132 3.54z"/>
            </svg>
          </a>
          
          <!-- Deezer — бесцветная, белая при ховере -->
          <a href="https://www.deezer.com/artist/nomusicians" target="_blank" rel="noopener noreferrer" class="opacity-60 hover:opacity-100 transition-opacity group" aria-label="Deezer">
            <svg class="w-5 h-5 text-muted group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.81 4.16v3.03H24V4.16h-5.19zM6.27 8.38v3.027h5.189V8.38h-5.19zm12.54 0v3.027H24V8.38h-5.19zM6.27 12.564v3.022h5.189v-3.022h-5.19zm6.27 0v3.022h5.19v-3.022h-5.19zm6.27 0v3.022H24v-3.022h-5.19zM0 16.745v3.03h5.19v-3.03H0zm6.27 0v3.03h5.189v-3.03h-5.19zm6.27 0v3.03h5.19v-3.03h-5.19zm6.27 0v3.03H24v-3.03h-5.19z"/>
            </svg>
          </a>
        </div>
        
        <!-- Separator -->
        <span class="text-muted/30">|</span>
      </div>
      
      <!-- Main Navigation -->
      <nav class="hidden md:flex items-center gap-4">
        {navItems.map((item) => (
          <a 
            href={getNavHref(item.href)}
            class="text-muted hover:text-white transition-colors duration-200"
          >
            {t(currentLang, item.key)}
          </a>
        ))}
      </nav>
      
      <!-- Separator -->
      <span class="hidden md:block text-muted/30">|</span>
      
      <!-- Language Switcher -->
      <div class="flex items-center gap-2">
        <a 
          href="/"
          data-lang-link
          class:list={[
            "uppercase transition-opacity px-1",
            currentLang === 'ru' ? 'text-white' : 'text-muted hover:text-white'
          ]}
        >
          RU
        </a>
        <span class="text-muted/50">|</span>
        <a 
          href="/en/"
          data-lang-link
          class:list={[
            "uppercase transition-opacity px-1",
            currentLang === 'en' ? 'text-white' : 'text-muted hover:text-white'
          ]}
        >
          EN
        </a>
        <span class="text-muted/50">|</span>
        <a 
          href="/cn/"
          data-lang-link
          class:list={[
            "uppercase transition-opacity px-1",
            currentLang === 'cn' ? 'text-white' : 'text-muted hover:text-white'
          ]}
        >
          中文
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        class="md:hidden text-white p-2 bg-transparent border-none"
        id="mobile-menu-btn"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
  
</header>

<!-- Mobile Menu (outside header for proper layering) -->
<div class="md:hidden hidden fixed inset-0 bg-black z-[100]" id="mobile-menu" style="padding-top: env(safe-area-inset-top);">
  <div class="flex flex-col items-center justify-center h-full gap-8">
    <button 
      class="absolute top-4 right-6 text-white p-2 bg-transparent border-none"
      id="mobile-menu-close"
      aria-label="Close menu"
      style="margin-top: env(safe-area-inset-top);"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    
    {navItems.map((item) => (
      <a 
        href={getNavHref(item.href)}
        class="text-2xl text-white hover:text-muted transition-colors duration-200 mobile-menu-link no-underline"
      >
        {t(currentLang, item.key)}
      </a>
    ))}
  </div>
</div>

<script>
  // Show logo on scroll
  const logo = document.getElementById('header-logo');
  const header = document.getElementById('main-header');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 100) {
      logo?.classList.remove('opacity-0');
      logo?.classList.add('opacity-100');
      header?.classList.add('bg-background/80', 'backdrop-blur-sm');
    } else {
      logo?.classList.add('opacity-0');
      logo?.classList.remove('opacity-100');
      header?.classList.remove('bg-background/80', 'backdrop-blur-sm');
    }
  });

  // Preserve scroll position when switching language
  document.querySelectorAll('[data-lang-link]').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const href = (e.currentTarget as HTMLAnchorElement).href;
      
      // Find closest section with id
      const sections = document.querySelectorAll('section[id]');
      let closestSection = '';
      let minDistance = Infinity;
      
      sections.forEach(section => {
        const rect = section.getBoundingClientRect();
        const distance = Math.abs(rect.top);
        if (distance < minDistance) {
          minDistance = distance;
          closestSection = section.id;
        }
      });
      
      // Navigate with hash
      const url = new URL(href);
      if (closestSection && minDistance < window.innerHeight / 2) {
        url.hash = closestSection;
      }
      window.location.href = url.toString();
    });
  });
  
  // Clear hash from URL after page load (so pull-to-refresh starts at top)
  if (window.location.hash) {
    setTimeout(() => {
      history.replaceState(null, '', window.location.pathname);
    }, 100);
  }
  
  // Mobile menu
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  });
  
  mobileMenuClose?.addEventListener('click', () => {
    mobileMenu?.classList.add('hidden');
    document.body.style.overflow = '';
  });
  
  mobileMenuLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      document.body.style.overflow = '';
    });
  });
</script>
