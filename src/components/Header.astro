---
import type { Lang } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  currentLang: Lang;
}

const { currentLang } = Astro.props;

// Определяем, находимся ли на главной странице
const pathname = Astro.url.pathname;
const isHomePage = pathname === '/' || pathname === '/en/' || pathname === '/cn/';

// Базовый путь главной для текущего языка
const homeBase = currentLang === 'ru' ? '' : `/${currentLang}`;

// Ссылка на главную страницу
const homeHref = currentLang === 'ru' ? '/' : `/${currentLang}/`;

// Функция для генерации ссылки с языковым префиксом
function getNavHref(path: string): string {
  // Для якорей на главной
  if (path.startsWith('#')) {
    return isHomePage ? path : `${homeBase}/${path}`;
  }
  // Для страниц добавляем языковой префикс
  return currentLang === 'ru' ? path : `/${currentLang}${path}`;
}

// === Умный переключатель языка ===
// Извлекаем путь без языкового префикса
function getPathWithoutLang(path: string): string {
  // Удаляем языковой префикс /en/ или /cn/
  if (path.startsWith('/en/') || path.startsWith('/en')) {
    return path.replace(/^\/en\/?/, '/');
  }
  if (path.startsWith('/cn/') || path.startsWith('/cn')) {
    return path.replace(/^\/cn\/?/, '/');
  }
  return path;
}

// Генерируем ссылку для переключения на другой язык (сохраняя текущую страницу)
function getLangSwitchHref(targetLang: 'ru' | 'en' | 'cn'): string {
  const basePath = getPathWithoutLang(pathname);
  
  // Для главной страницы
  if (basePath === '/' || basePath === '') {
    return targetLang === 'ru' ? '/' : `/${targetLang}/`;
  }
  
  // Для остальных страниц
  if (targetLang === 'ru') {
    return basePath;
  }
  return `/${targetLang}${basePath}`;
}

const langLinks = {
  ru: getLangSwitchHref('ru'),
  en: getLangSwitchHref('en'),
  cn: getLangSwitchHref('cn'),
};

// Навигация (без "Люди" - теперь на странице "О нас")
const navItems = [
  { key: 'nav.about' as const, href: '/about' },
  { key: 'nav.releases' as const, href: '/releases' },
  { key: 'nav.projects' as const, href: '/projects' },
  { key: 'nav.media' as const, href: '/media' },
  { key: 'nav.contact' as const, href: '/contact' },
];
---

<header 
  class:list={[
    "fixed top-0 left-0 right-0 z-50 transition-all duration-300",
    !isHomePage && "bg-background/80 backdrop-blur-sm"
  ]}
  id="main-header" 
  data-is-home={isHomePage.toString()}
  style="padding-top: env(safe-area-inset-top);"
>
  <nav class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">
    <!-- Logo (hidden on hero for homepage, always visible on other pages) -->
    <a 
      href={homeHref} 
      class:list={[
        "text-white text-lg tracking-[0.12em] uppercase transition-opacity duration-300",
        isHomePage ? "opacity-0" : "opacity-100"
      ]}
      id="header-logo" 
      style="font-family: var(--font-logo);"
    >
      Nomusicians
