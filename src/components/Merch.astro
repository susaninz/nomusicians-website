---
import type { Lang } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<section id="merch" class="py-24 px-6 bg-surface">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-light tracking-wide text-center mb-12">
      {t(lang, 'merch.title')}
    </h2>
    
    <div class="flex flex-col md:flex-row items-center gap-12">
      <!-- T-shirt image -->
      <div class="flex-1 max-w-md">
        <div class="relative aspect-square bg-[#2a2a2a] rounded-lg overflow-hidden">
          <img 
            src="/merch-tshirt.png" 
            alt="Nomusicians T-shirt"
            class="w-full h-full object-contain"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
          />
          <!-- Fallback placeholder -->
          <div class="absolute inset-0 items-center justify-center text-muted hidden">
            <div class="text-center">
              <svg class="w-16 h-16 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p class="text-sm">T-shirt</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Info -->
      <div class="flex-1 text-center md:text-left">
        <h3 class="text-2xl font-light mb-4">Nomusicians T-shirt</h3>
        <p class="text-muted mb-6">
          {t(lang, 'merch.soon')}
        </p>
        
        <a 
          href="mailto:mail@nomusicians.com?subject=Merch%20Inquiry"
          class="inline-block px-8 py-3 border border-white/30 text-white no-underline text-sm tracking-[0.2em] uppercase hover:bg-white hover:text-black transition-all duration-300"
        >
          {t(lang, 'merch.notify')}
        </a>
      </div>
    </div>
  </div>
</section>
