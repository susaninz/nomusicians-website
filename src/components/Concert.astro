---
import type { Lang } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  lang: Lang;
  date: string;
  time: string;
  city: string;
  venue: string;
  description?: string;
  ticketUrl?: string;
  isPast?: boolean;
}

const { lang, date, time, city, venue, description, ticketUrl, isPast = false } = Astro.props;
---

<section id="concert" class="bg-surface py-16 px-6">
  <div class="max-w-4xl mx-auto text-center">
    <p class="text-muted text-sm tracking-[0.2em] uppercase mb-4">
      {isPast ? t(lang, 'concert.recent') : t(lang, 'concert.upcoming')}
    </p>
    
    <div class="space-y-2">
      <p class="text-2xl md:text-3xl font-light">
        <span class="text-white">{date}</span>
        <span class="text-muted mx-2">Â·</span>
        <span class="text-white">{time}</span>
      </p>
      
      <h2 class="text-3xl md:text-4xl font-light tracking-wide">
        {city}
        {venue && <span class="text-muted"> / {venue}</span>}
      </h2>
      
      {description && (
        <p class="text-muted text-lg mt-4">
          {description}
        </p>
      )}
    </div>
    
    {ticketUrl && !isPast && (
      <a 
        href={ticketUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block mt-8 px-8 py-3 border border-white/30 text-sm tracking-[0.2em] uppercase hover:bg-white hover:text-black transition-all duration-300"
      >
        {t(lang, 'concert.tickets')}
      </a>
    )}
  </div>
</section>
