---
import type { Lang } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<section id="about" class="py-24 px-6">
  <div class="max-w-3xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-light tracking-wide text-center mb-12">
      {t(lang, 'about.title')}
    </h2>
    
    <div class="space-y-6 text-lg leading-relaxed text-text/80">
      <p set:html={t(lang, 'about.p1').replace('<strong>', '<strong class="text-white font-normal">').replace('<em>', '<em class="text-white not-italic">')} />
      <p>{t(lang, 'about.p2')}</p>
      <p set:html={t(lang, 'about.p3').replace('<em>', '<em class="text-white not-italic">')} />
      <p>{t(lang, 'about.p4')}</p>
    </div>
    
    <!-- History Section -->
    <div class="mt-16 pt-16 border-t border-white/10">
      <h3 class="text-2xl md:text-3xl font-light tracking-wide text-center mb-10">
        {t(lang, 'history.title')}
      </h3>
      
      <div class="grid md:grid-cols-2 gap-8 items-center mb-8">
        <!-- History Photo -->
        <div class="aspect-[4/3] overflow-hidden">
          <img 
            src="/history/band-early.jpg" 
            alt="Nomusicians early days"
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
        
        <!-- History Text -->
        <div class="space-y-4 text-text/80">
          <p>{t(lang, 'history.p1')}</p>
          <p>{t(lang, 'history.p2')}</p>
          <p set:html={t(lang, 'history.p3').replace('<em>', '<em class="text-white not-italic">')} />
        </div>
      </div>
    </div>
  </div>
</section>
