---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Nomusicians — Electronic & Neoclassical Music',
  description = 'Импровизационная электроакустическая музыка. Live performances combining analog synthesizers, drums, violin, flugelhorn with visual art.'
} = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500&family=Manrope:wght@300;400;500&family=Noto+Sans+SC:wght@300;400&display=swap" rel="stylesheet" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="ru_RU" />
    
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  @import '../styles/global.css';
</style>
