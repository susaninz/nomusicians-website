---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { getProjectBySlug, getProjects, urlFor } from '../../lib/sanity';
import { PortableText } from 'astro-portabletext';

// Для статической генерации
export async function getStaticPaths() {
  const projects = await getProjects();
  return projects
    .filter(p => p.hasPage)
    .map(project => ({
      params: { slug: project.slug.current },
    }));
}

const { slug } = Astro.params;
const lang = 'ru';

// Получаем проект из Sanity
const project = await getProjectBySlug(slug);

if (!project) {
  return Astro.redirect('/projects');
}

// Получаем локализованные данные
const title = project.title?.[lang] || project.title?.ru || 'Проект';
const subtitle = project.subtitle?.[lang] || project.subtitle?.ru || '';
const description = project.fullDescription?.[lang] || project.fullDescription?.ru || [];
const shortDescription = project.description?.[lang] || project.description?.ru || '';

// Hero image URL
const heroImageUrl = project.heroImage 
  ? urlFor(project.heroImage).width(1920).url() 
  : project.image 
    ? urlFor(project.image).width(1920).url() 
    : '/og-image.png';

// Gallery
const gallery = project.gallery?.map(item => ({
  src: urlFor(item.asset).width(800).url(),
  fullSrc: urlFor(item.asset).width(1920).url(),
  caption: item.caption || '',
})) || [];

// Videos
const videos = project.videos || [];

// Socials
const socials = project.socials || [];
---

<Layout title={`${title} — Nomusicians`} lang="ru">
  <Header currentLang={lang} />
  
  <main class="pt-20">
    <!-- Hero с Parallax -->
    <section class="relative h-[70vh] min-h-[500px] overflow-hidden">
      <div class="absolute inset-0 parallax-container">
        <img 
          src={heroImageUrl} 
          alt={title}
          class="w-full h-[120%] object-contain parallax-bg"
          style="transform: translateY(0)"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-background via-background/30 to-transparent"></div>
      </div>
      
      <div class="relative z-10 flex items-end h-full pb-12 px-6">
        <div class="max-w-4xl mx-auto w-full">
          <a 
            href="/projects" 
            class="inline-flex items-center gap-2 text-sm text-white/60 hover:text-white mb-4 transition-colors no-underline"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
            </svg>
            Проекты
          </a>
          <h1 class="text-4xl md:text-6xl font-light tracking-wide text-white mb-4" style="font-family: var(--font-logo);">
            {title}
          </h1>
          {subtitle && <p class="text-xl text-white/70 mb-2">{subtitle}</p>}
          <div class="flex items-center gap-4 flex-wrap">
            <p class="text-sm text-white/50 tracking-wider uppercase">{project.year}</p>
            {socials.length > 0 && (
              <div class="flex gap-3 items-center">
                {socials.map(link => {
                  // Автогенерация URL из label для instagram/telegram
                  const autoUrl = !link.url && link.label ? (
                    link.type === 'instagram' ? `https://instagram.com/${link.label.replace('@', '')}` :
                    link.type === 'telegram' ? `https://t.me/${link.label.replace('@', '')}` :
                    null
                  ) : link.url;
                  
                  return link.type === 'instagram' ? (
                    <a 
                      href={autoUrl}
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="ig-icon-link text-white/40 hover:text-white transition-colors no-underline"
                      aria-label="Instagram"
                    >
                      <span class="ig-icon">IG</span>
                    </a>
                  ) : autoUrl ? (
                    <a 
                      href={autoUrl} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="text-sm text-white/40 hover:text-white transition-colors no-underline"
                    >
                      {link.type === 'telegram' ? '✈' : '◎'} {link.label}
                    </a>
                  ) : (
                    <span class="text-sm text-white/40">
                      ◎ {link.label}
                    </span>
                  );
                })}
              </div>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Описание -->
    {description && description.length > 0 && (
      <section class="py-16 px-6">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-2xl font-light tracking-wide text-center mb-8">Идея и смыслы</h2>
          <div class="text-lg leading-relaxed text-text/80 space-y-6 portable-text">
            <PortableText value={description} />
          </div>
        </div>
      </section>
    )}

    <!-- Участники (Credits) -->
    {project.participants && project.participants.length > 0 && (
      <section class="py-16 px-6 bg-surface/30">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl font-light tracking-wide text-center mb-12">Участники</h2>
          
          <div class="grid md:grid-cols-3 gap-8 text-center">
            {project.participants.map(group => (
              <div>
                <h3 class="text-sm text-muted uppercase tracking-wider mb-4">{group.role}</h3>
                <div class="space-y-2">
                  {group.people?.map(person => (
                    <a 
                      href={`/people#${person.slug?.current || person._id}`}
                      class="block text-white hover:text-white/70 transition-colors no-underline"
                    >
                      {person.name}
                    </a>
                  ))}
                  {group.andOthers && (
                    <span class="block text-white/50 italic">и другие</span>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Видео -->
    {videos.length > 0 && (
      <section class="py-16 px-6">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-2xl font-light tracking-wide text-center mb-12">Видео</h2>
          
          <div class:list={[
            "grid gap-8",
            videos.length === 1 ? "md:grid-cols-1 max-w-2xl mx-auto" : "md:grid-cols-2"
          ]}>
            {videos.map(video => (
              <div class="group">
                <div class="aspect-video bg-surface overflow-hidden relative">
                  <div class="absolute inset-0 z-10 bg-background/30 group-hover:bg-transparent transition-all duration-500 pointer-events-none"></div>
                  {video.youtubeUrl ? (
                    <iframe
                      src={video.youtubeUrl.replace('watch?v=', 'embed/')}
                      class="w-full h-full grayscale group-hover:grayscale-0 transition-all duration-500"
                      frameborder="0"
                      allowfullscreen
                    ></iframe>
                  ) : video.localFile ? (
                    <video
                      controls
                      preload="metadata"
                      class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
                    >
                      <source src={video.localFile.asset?.url} type="video/mp4" />
                      Ваш браузер не поддерживает видео.
                    </video>
                  ) : null}
                </div>
                <p class="text-sm text-muted mt-3 text-center">{video.title}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Галерея -->
    {gallery.length > 0 && (
      <section class="py-16 bg-surface/30">
        <div class="max-w-6xl mx-auto px-6 mb-8">
          <h2 class="text-2xl font-light tracking-wide text-center mb-2">Галерея</h2>
          <p class="text-muted text-center text-sm">Свайпайте для просмотра →</p>
        </div>
        
        <div class="gallery-scroll overflow-x-auto scrollbar-hide">
          <div class="flex gap-4 px-6 md:px-12 w-max">
            {gallery.map((photo, index) => (
              <div 
                class="flex-shrink-0 w-72 md:w-96 aspect-square overflow-hidden group cursor-pointer"
                data-lightbox-trigger
                data-index={index}
              >
                <img 
                  src={photo.src} 
                  alt={photo.caption}
                  class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-105"
                  loading="lazy"
                />
              </div>
            ))}
          </div>
        </div>
        
        <!-- Индикаторы N8 -->
        <div class="flex justify-center items-end gap-5 mt-8 h-10" id="gallery-indicators">
          {gallery.map((_, index) => {
            const heights = [12, 20, 16, 24, 14, 18, 22, 10];
            const h = heights[index % heights.length];
            return (
              <button 
                class="scroll-dot indicator-n8"
                data-dot-index={index}
                style={`--stem-height: ${h}px`}
                aria-label={`Фото ${index + 1}`}
              ></button>
            );
          })}
        </div>
        
        <!-- Кнопка "Показать все" -->
        {gallery.length > 6 && (
          <div class="text-center mt-8">
            <button 
              id="show-all-btn"
              class="bg-transparent border-none text-sm text-white/40 hover:text-white transition-colors tracking-wider uppercase cursor-pointer"
            >
              Показать все ({gallery.length}) ↓
            </button>
          </div>
        )}
      </section>
    )}

    <!-- Сетка (скрыта по умолчанию) -->
    {gallery.length > 6 && (
      <section id="gallery-grid" class="py-16 px-6 hidden">
        <div class="max-w-6xl mx-auto mb-8">
          <h2 class="text-2xl font-light tracking-wide text-center mb-2">Все фото</h2>
        </div>
        
        <div class="max-w-6xl mx-auto grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-4">
          {gallery.map((photo, index) => (
            <div 
              class="aspect-square overflow-hidden group cursor-pointer"
              data-lightbox-trigger-grid
              data-index={index}
            >
              <img 
                src={photo.src} 
                alt={photo.caption}
                class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>
          ))}
        </div>
        
        <div class="text-center mt-8">
          <button 
            id="hide-grid-btn"
            class="bg-transparent border-none text-sm text-white/40 hover:text-white transition-colors tracking-wider uppercase cursor-pointer"
          >
            ↑ Свернуть
          </button>
        </div>
      </section>
    )}

    <!-- Лайтбокс -->
    <div 
      id="lightbox" 
      class="fixed inset-0 z-50 bg-black/95 hidden items-center justify-center"
    >
      <button 
        id="lightbox-close"
        class="absolute top-6 right-6 text-white/50 hover:text-white transition-colors z-10 bg-transparent border-none cursor-pointer"
      >
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      
      <button 
        id="lightbox-prev"
        class="absolute left-4 top-1/2 -translate-y-1/2 text-white/50 hover:text-white transition-colors z-10 bg-transparent border-none cursor-pointer"
      >
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      
      <button 
        id="lightbox-next"
        class="absolute right-4 top-1/2 -translate-y-1/2 text-white/50 hover:text-white transition-colors z-10 bg-transparent border-none cursor-pointer"
      >
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
      
      <img 
        id="lightbox-image" 
        src="" 
        alt=""
        class="max-w-[90vw] max-h-[85vh] object-contain"
      />
      
      <p id="lightbox-caption" class="absolute bottom-6 left-1/2 -translate-x-1/2 text-white/70 text-sm"></p>
    </div>

    <!-- Презентация -->
    {project.presentationUrl && (
      <section class="py-16 px-6 bg-surface/30">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-2xl font-light tracking-wide mb-6">Презентация проекта</h2>
          <p class="text-muted mb-8">
            Подробная информация о проекте, история, участники и планы развития
          </p>
          <a 
            href={project.presentationUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 px-8 py-4 border border-white/30 text-white hover:bg-white hover:text-black transition-all duration-300 group no-underline"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span class="text-sm tracking-wider uppercase">Открыть презентацию</span>
            <svg class="w-4 h-4 opacity-50 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </div>
      </section>
    )}

    <!-- Навигация -->
    <section class="py-16 px-6 text-center space-y-4">
      <a 
        href="/projects" 
        class="inline-flex items-center gap-2 text-white/60 hover:text-white transition-colors no-underline"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
        </svg>
        Все проекты
      </a>
      <span class="text-muted mx-4">·</span>
      <a 
        href="/people" 
        class="inline-flex items-center gap-2 text-white/60 hover:text-white transition-colors no-underline"
      >
        Musicians & Nomusicians
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </section>

    <!-- Footer -->
    <footer class="py-8 px-6 text-center text-muted text-sm border-t border-white/10">
      <p>© 2025 Nomusicians</p>
    </footer>
    
    <!-- Данные галереи для JavaScript -->
    <script type="application/json" id="gallery-data" set:html={JSON.stringify(gallery.map(g => ({src: g.fullSrc, caption: g.caption})))}></script>
  </main>
</Layout>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  .parallax-container {
    position: relative;
    overflow: hidden;
  }
  
  .parallax-bg {
    will-change: transform;
    transition: transform 0.1s ease-out;
  }
  
  .indicator-n8 {
    position: relative;
    width: 8px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: none;
    border: none;
    padding: 0;
  }
  
  .indicator-n8::before {
    content: '';
    display: block;
    width: 1px;
    height: var(--stem-height, 16px);
    background: rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }
  
  .indicator-n8::after {
    content: '';
    display: block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    margin-top: -2px;
    transition: all 0.3s ease;
  }
  
  .indicator-n8.active::before,
  .indicator-n8:hover::before {
    background: white;
  }
  
  .indicator-n8.active::after,
  .indicator-n8:hover::after {
    background: white;
  }
  
  /* Portable Text стили */
  .portable-text :global(p) {
    margin-bottom: 1.5rem;
  }
  
  .portable-text :global(strong) {
    color: white;
  }
  
  .portable-text :global(em) {
    font-style: italic;
  }
  
  /* Instagram icon */
  .ig-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 0.65rem;
    font-weight: 600;
    padding: 0.15rem 0.35rem;
    border: 1.5px solid currentColor;
    border-radius: 4px;
    letter-spacing: 0.05em;
    transition: all 0.2s ease;
  }
  
  .ig-icon-link:hover .ig-icon {
    background: white;
    color: black;
    border-color: white;
  }
</style>

<script>
  const photos = JSON.parse(document.getElementById('gallery-data')?.textContent || '[]');

  let currentIndex = 0;
  const lightbox = document.getElementById('lightbox');
  const lightboxImage = document.getElementById('lightbox-image') as HTMLImageElement;
  const lightboxCaption = document.getElementById('lightbox-caption');
  const closeBtn = document.getElementById('lightbox-close');
  const prevBtn = document.getElementById('lightbox-prev');
  const nextBtn = document.getElementById('lightbox-next');

  function openLightbox(index: number) {
    currentIndex = index;
    lightboxImage.src = photos[index].src;
    lightboxCaption!.textContent = photos[index].caption;
    lightbox?.classList.remove('hidden');
    lightbox?.classList.add('flex');
    document.body.style.overflow = 'hidden';
  }

  function closeLightbox() {
    lightbox?.classList.add('hidden');
    lightbox?.classList.remove('flex');
    document.body.style.overflow = '';
  }

  function showPrev() {
    currentIndex = (currentIndex - 1 + photos.length) % photos.length;
    lightboxImage.src = photos[currentIndex].src;
    lightboxCaption!.textContent = photos[currentIndex].caption;
  }

  function showNext() {
    currentIndex = (currentIndex + 1) % photos.length;
    lightboxImage.src = photos[currentIndex].src;
    lightboxCaption!.textContent = photos[currentIndex].caption;
  }

  document.querySelectorAll('[data-lightbox-trigger], [data-lightbox-trigger-grid]').forEach(el => {
    el.addEventListener('click', () => {
      const index = parseInt(el.getAttribute('data-index') || '0');
      openLightbox(index);
    });
  });

  closeBtn?.addEventListener('click', closeLightbox);
  prevBtn?.addEventListener('click', showPrev);
  nextBtn?.addEventListener('click', showNext);

  lightbox?.addEventListener('click', (e) => {
    if (e.target === lightbox) closeLightbox();
  });

  document.addEventListener('keydown', (e) => {
    if (lightbox?.classList.contains('hidden')) return;
    if (e.key === 'Escape') closeLightbox();
    if (e.key === 'ArrowLeft') showPrev();
    if (e.key === 'ArrowRight') showNext();
  });

  // Gallery scroll indicators
  const scrollContainer = document.querySelector('.gallery-scroll');
  const dots = document.querySelectorAll('.scroll-dot');
  
  function updateIndicators(activeIndex: number) {
    dots.forEach((dot, i) => {
      if (i === activeIndex) {
        dot.classList.add('active');
      } else {
        dot.classList.remove('active');
      }
    });
  }
  
  updateIndicators(0);
  
  scrollContainer?.addEventListener('scroll', () => {
    const scrollLeft = scrollContainer.scrollLeft;
    const itemWidth = 384 + 16;
    const activeIndex = Math.round(scrollLeft / itemWidth);
    updateIndicators(activeIndex);
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      const itemWidth = 384 + 16;
      scrollContainer?.scrollTo({
        left: index * itemWidth,
        behavior: 'smooth'
      });
    });
  });

  // Show/hide grid
  const showAllBtn = document.getElementById('show-all-btn');
  const hideGridBtn = document.getElementById('hide-grid-btn');
  const galleryGrid = document.getElementById('gallery-grid');

  showAllBtn?.addEventListener('click', () => {
    galleryGrid?.classList.remove('hidden');
    galleryGrid?.scrollIntoView({ behavior: 'smooth' });
  });

  hideGridBtn?.addEventListener('click', () => {
    galleryGrid?.classList.add('hidden');
  });

  // Parallax effect
  const parallaxBg = document.querySelector('.parallax-bg') as HTMLElement;
  
  function updateParallax() {
    if (!parallaxBg) return;
    const scrolled = window.scrollY;
    const rate = scrolled * 0.3;
    parallaxBg.style.transform = `translateY(${rate}px)`;
  }
  
  window.addEventListener('scroll', updateParallax, { passive: true });
  updateParallax();
</script>

