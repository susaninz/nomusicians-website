---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import { getPeople } from '../../../data/people';

const lang = 'ru';

// Данные проекта
const project = {
  title: 'Классика',
  subtitle: 'Пространство для погружения в звук',
  years: '2022—2024',
  heroImage: '/projects/klassika-logo.png',
  
  // Соцсети проекта
  socials: [
    { type: 'telegram', url: 'https://t.me/klassika_dom', label: 'Telegram' },
    { type: 'social', label: '@klassika_dom' },
  ],
  
  // Участники: только id — имена подтягиваются из people.ts
  credits: {
    music: ['rakitin', 'kotnov', 'slezkin', 'shchedrin', 'shcherbina', 'resser', 'vorontsov'],
    musicMore: true, // "и другие"
    visuals: ['dansury'],
    photo: ['samulekin'],
  },
  
  // Галерея фото
  gallery: [
    // Огонёк 2024
    { src: '/projects/klassika/gallery/Ogonek 24 - 1.png', caption: 'Огонёк 2024' },
    { src: '/projects/klassika/gallery/Ogonek 24 - 2.png', caption: 'Огонёк 2024' },
    { src: '/projects/klassika/gallery/Ogonek 24 - 3.png', caption: 'Огонёк 2024' },
    // Холодок 2025
    { src: '/projects/klassika/gallery/Holodok 25 - 1.png', caption: 'Холодок 2025' },
    { src: '/projects/klassika/gallery/Holodok 25 - 2.png', caption: 'Холодок 2025' },
    { src: '/projects/klassika/gallery/Holodok 25 - 3.png', caption: 'Холодок 2025' },
    { src: '/projects/klassika/gallery/Holodok 25 - 4.png', caption: 'Холодок 2025' },
    { src: '/projects/klassika/gallery/Holodok 25 - 5.png', caption: 'Холодок 2025' },
    { src: '/projects/klassika/gallery/Holodok 25 - 6.png', caption: 'Холодок 2025' },
    // Дневник на Яузе
    { src: '/projects/klassika/gallery/Dnevkin Yauza 1.png', caption: 'Дневник на Яузе' },
    { src: '/projects/klassika/gallery/Dnevkin Yauza 2.png', caption: 'Дневник на Яузе' },
    { src: '/projects/klassika/gallery/Dnevkin Yauza 3.png', caption: 'Дневник на Яузе' },
  ],
  
  // Видео (локальные файлы)
  videos: [
    { 
      title: 'Quartet',
      src: '/videos/klassika/quartet short.mp4',
      type: 'local',
    },
    { 
      title: 'Electronic Set',
      src: '/videos/klassika/electronic set short.mp4',
      type: 'local',
    },
  ],
};
---

<Layout title={`${project.title} — Nomusicians`}>
  <Header currentLang={lang} />
  
  <main class="pt-20">
    <!-- Hero с Parallax -->
    <section class="relative h-[70vh] min-h-[500px] overflow-hidden">
      <div class="absolute inset-0 parallax-container">
        <img 
          src={project.heroImage} 
          alt={project.title}
          class="w-full h-[120%] object-contain parallax-bg"
          style="transform: translateY(0)"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-background via-background/30 to-transparent"></div>
      </div>
      
      <div class="relative z-10 flex items-end h-full pb-12 px-6">
        <div class="max-w-4xl mx-auto w-full">
          <a 
            href="/#projects" 
            class="inline-flex items-center gap-2 text-sm text-white/60 hover:text-white mb-4 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
            </svg>
            Проекты
          </a>
          <h1 class="text-4xl md:text-6xl font-light tracking-wide text-white mb-4" style="font-family: var(--font-logo);">
            {project.title}
          </h1>
          <p class="text-xl text-white/70 mb-2">{project.subtitle}</p>
          <div class="flex items-center gap-4 flex-wrap">
            <p class="text-sm text-white/50 tracking-wider uppercase">{project.years}</p>
            {project.socials && project.socials.length > 0 && (
              <div class="flex gap-3">
                {project.socials.map(link => (
                  link.url ? (
                    <a 
                      href={link.url} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="text-sm text-white/40 hover:text-white transition-colors"
                    >
                      {link.type === 'telegram' ? '✈' : '◉'} {link.label}
                    </a>
                  ) : (
                    <span class="text-sm text-white/40">
                      ◉ {link.label}
                    </span>
                  )
                ))}
              </div>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Описание -->
    <section class="py-16 px-6">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl font-light tracking-wide text-center mb-8">Идея и смыслы</h2>
        <div class="text-lg leading-relaxed text-text/80 space-y-6">
          <p>
            Есть много аспектов музыки и эффектов, как она воздействует на людей. 
            Она может развлекать, создавать фон, вызывать в человеке процессы, отзеркаливающие её настроение, порождать эмоции.
            Музыка запускает воображение, рисует картины внутри, создаёт пространство для мыслей и воспоминаний.
          </p>
          <p>
            Сейчас в мире преобладает развлекательный аспект музыки. Это неплохо... 
            Но у нас, в Классике, мы предлагаем сконцентрироваться на другом. 
            <strong class="text-white">Мы создаём пространство для идеального погружения в звук.</strong>
          </p>
          <p>
            Классическая, неоклассическая, джазовая, электронная и другая музыка. 
            Музыка, где основой является красота тембра каждого инструмента, глубина самой музыки и проникновения её в человека.
          </p>
          <p>
            Совместное погружение в звук вместе с живыми концертами и визуальным искусством. 
            Возможность побыть наедине с собой и музыкой.
          </p>
          <p class="text-white text-xl italic text-center">
            Добро пожаловать ДОМОЙ.
          </p>
        </div>
      </div>
    </section>

    <!-- Участники (Credits) -->
    <section class="py-16 px-6 bg-surface/30">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-light tracking-wide text-center mb-12">Участники</h2>
        
        <div class="grid md:grid-cols-3 gap-8 text-center">
          <!-- Музыка -->
          <div>
            <h3 class="text-sm text-muted uppercase tracking-wider mb-4">Музыка</h3>
            <div class="space-y-2">
              {getPeople(project.credits.music).map(person => (
                <a 
                  href={`/people#${person.id}`}
                  class="block text-white hover:text-white/70 transition-colors"
                >
                  {person.name}
                </a>
              ))}
              {project.credits.musicMore && (
                <span class="block text-white/50 italic">и другие</span>
              )}
            </div>
          </div>
          
          <!-- Визуалы -->
          <div>
            <h3 class="text-sm text-muted uppercase tracking-wider mb-4">Визуалы</h3>
            <div class="space-y-2">
              {getPeople(project.credits.visuals).map(person => (
                <a 
                  href={`/people#${person.id}`}
                  class="block text-white hover:text-white/70 transition-colors"
                >
                  {person.name}
                </a>
              ))}
            </div>
          </div>
          
          <!-- Съёмка -->
          <div>
            <h3 class="text-sm text-muted uppercase tracking-wider mb-4">Съёмка</h3>
            <div class="space-y-2">
              {getPeople(project.credits.photo).map(person => (
                <a 
                  href={`/people#${person.id}`}
                  class="block text-white hover:text-white/70 transition-colors"
                >
                  {person.name}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Видео -->
    <section class="py-16 px-6">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl font-light tracking-wide text-center mb-12">Видео</h2>
        
        <div class:list={[
          "grid gap-8",
          project.videos.length === 1 ? "md:grid-cols-1 max-w-2xl mx-auto" : "md:grid-cols-2"
        ]}>
          {project.videos.map(video => (
            <div class="group">
              <div class="aspect-video bg-surface overflow-hidden relative">
                <div class="absolute inset-0 z-10 bg-background/30 group-hover:bg-transparent transition-all duration-500 pointer-events-none"></div>
                <video
                  controls
                  preload="metadata"
                  class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
                  poster=""
                >
                  <source src={video.src} type="video/mp4" />
                  Ваш браузер не поддерживает видео.
                </video>
              </div>
              <p class="text-sm text-muted mt-3 text-center">{video.title}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Галерея (вариант D: скролл + кнопка "Показать все" если много) -->
    <section class="py-16 bg-surface/30">
      <div class="max-w-6xl mx-auto px-6 mb-8">
        <h2 class="text-2xl font-light tracking-wide text-center mb-2">Галерея</h2>
        <p class="text-muted text-center text-sm">Свайпайте для просмотра →</p>
      </div>
      
      <div class="gallery-scroll overflow-x-auto scrollbar-hide">
        <div class="flex gap-4 px-6 md:px-12 w-max">
          {project.gallery.map((photo, index) => (
            <div 
              class="flex-shrink-0 w-72 md:w-96 aspect-square overflow-hidden group cursor-pointer"
              data-lightbox-trigger
              data-index={index}
            >
              <img 
                src={photo.src} 
                alt={photo.caption}
                class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>
          ))}
        </div>
      </div>
      
      <!-- Индикаторы N8 (штили/фейдеры) -->
      <div class="flex justify-center items-end gap-5 mt-8 h-10" id="gallery-indicators">
        {project.gallery.map((_, index) => {
          const heights = [12, 20, 16, 24, 14, 18, 22, 10];
          const h = heights[index % heights.length];
          return (
            <button 
              class="scroll-dot indicator-n8"
              data-dot-index={index}
              style={`--stem-height: ${h}px`}
              aria-label={`Фото ${index + 1}`}
            ></button>
          );
        })}
      </div>
      
      <!-- Кнопка "Показать все" (если фото > 6) -->
      {project.gallery.length > 6 && (
        <div class="text-center mt-8">
          <button 
            id="show-all-btn"
            class="bg-transparent border-none text-sm text-white/40 hover:text-white transition-colors tracking-wider uppercase cursor-pointer"
          >
            Показать все ({project.gallery.length}) ↓
          </button>
        </div>
      )}
    </section>

    <!-- Сетка (скрыта по умолчанию, показывается по кнопке) -->
    <section id="gallery-grid" class="py-16 px-6 hidden">
      <div class="max-w-6xl mx-auto mb-8">
        <h2 class="text-2xl font-light tracking-wide text-center mb-2">Все фото</h2>
      </div>
      
      <div class="max-w-6xl mx-auto grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-4">
        {project.gallery.map((photo, index) => (
          <div 
            class="aspect-square overflow-hidden group cursor-pointer"
            data-lightbox-trigger-grid
            data-index={index}
          >
            <img 
              src={photo.src} 
              alt={photo.caption}
              class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 group-hover:scale-105"
              loading="lazy"
            />
          </div>
        ))}
      </div>
      
      <div class="text-center mt-8">
        <button 
          id="hide-grid-btn"
          class="bg-transparent border-none text-sm text-white/40 hover:text-white transition-colors tracking-wider uppercase cursor-pointer"
        >
          ↑ Свернуть
        </button>
      </div>
    </section>

    <!-- Лайтбокс -->
    <div 
      id="lightbox" 
      class="fixed inset-0 z-50 bg-black/95 hidden items-center justify-center"
    >
      <button 
        id="lightbox-close"
        class="absolute top-6 right-6 text-white/50 hover:text-white transition-colors z-10 bg-transparent border-none cursor-pointer"
      >
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      
      <button 
        id="lightbox-prev"
        class="absolute left-4 top-1/2 -translate-y-1/2 text-white/50 hover:text-white transition-colors z-10 bg-transparent border-none cursor-pointer"
      >
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      
      <button 
        id="lightbox-next"
        class="absolute right-4 top-1/2 -translate-y-1/2 text-white/50 hover:text-white transition-colors z-10 bg-transparent border-none cursor-pointer"
      >
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
      
      <img 
        id="lightbox-image" 
        src="" 
        alt=""
        class="max-w-[90vw] max-h-[85vh] object-contain"
      />
      
      <p id="lightbox-caption" class="absolute bottom-6 left-1/2 -translate-x-1/2 text-white/70 text-sm"></p>
    </div>

    <!-- Презентация -->
    <section class="py-16 px-6 bg-surface/30">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-2xl font-light tracking-wide mb-6">Презентация проекта</h2>
        <p class="text-muted mb-8">
          Подробная информация о проекте, история, участники и планы развития
        </p>
        <a 
          href="https://docs.google.com/presentation/d/e/2PACX-1vRDIeSzd4H4wJQUtDKuL8j0DrmLc0HOhgnLd0tQQl_ItLVaC9jjFk-oCdPEYUHOhJX14h3GkttPYXhM/pub?start=false&loop=false&delayms=3000"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 px-8 py-4 border border-white/30 text-white hover:bg-white hover:text-black transition-all duration-300 group"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span class="text-sm tracking-wider uppercase">Открыть презентацию</span>
          <svg class="w-4 h-4 opacity-50 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </a>
      </div>
    </section>

    <!-- Навигация -->
    <section class="py-16 px-6 text-center space-y-4">
      <a 
        href="/#projects" 
        class="inline-flex items-center gap-2 text-white/60 hover:text-white transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
        </svg>
        Все проекты
      </a>
      <span class="text-muted mx-4">·</span>
      <a 
        href="/people" 
        class="inline-flex items-center gap-2 text-white/60 hover:text-white transition-colors"
      >
        Musicians & Nomusicians
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </section>

    <!-- Footer -->
    <footer class="py-8 px-6 text-center text-muted text-sm border-t border-white/10">
      <p>© 2025 Nomusicians</p>
    </footer>
    
    <!-- Данные галереи для JavaScript -->
    <script type="application/json" id="gallery-data" set:html={JSON.stringify(project.gallery)}></script>
  </main>
</Layout>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  /* Parallax */
  .parallax-container {
    position: relative;
    overflow: hidden;
  }
  
  .parallax-bg {
    will-change: transform;
    transition: transform 0.1s ease-out;
  }
  
  /* Индикаторы N8 (штили/фейдеры) через псевдоэлементы */
  .indicator-n8 {
    position: relative;
    width: 8px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: none;
    border: none;
    padding: 0;
  }
  
  /* Штиль (вертикальная линия) */
  .indicator-n8::before {
    content: '';
    display: block;
    width: 1px;
    height: var(--stem-height, 16px);
    background: rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }
  
  /* Точка */
  .indicator-n8::after {
    content: '';
    display: block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    margin-top: -2px;
    transition: all 0.3s ease;
  }
  
  .indicator-n8.active::before,
  .indicator-n8:hover::before {
    background: white;
  }
  
  .indicator-n8.active::after,
  .indicator-n8:hover::after {
    background: white;
  }
</style>

<script>
  // Данные для Lightbox — синхронизированы с project.gallery
  const photos = JSON.parse(document.getElementById('gallery-data')?.textContent || '[]');

  let currentIndex = 0;
  const lightbox = document.getElementById('lightbox');
  const lightboxImage = document.getElementById('lightbox-image') as HTMLImageElement;
  const lightboxCaption = document.getElementById('lightbox-caption');
  const closeBtn = document.getElementById('lightbox-close');
  const prevBtn = document.getElementById('lightbox-prev');
  const nextBtn = document.getElementById('lightbox-next');

  function openLightbox(index: number) {
    currentIndex = index;
    lightboxImage.src = photos[index].src;
    lightboxCaption!.textContent = photos[index].caption;
    lightbox?.classList.remove('hidden');
    lightbox?.classList.add('flex');
    document.body.style.overflow = 'hidden';
  }

  function closeLightbox() {
    lightbox?.classList.add('hidden');
    lightbox?.classList.remove('flex');
    document.body.style.overflow = '';
  }

  function showPrev() {
    currentIndex = (currentIndex - 1 + photos.length) % photos.length;
    lightboxImage.src = photos[currentIndex].src;
    lightboxCaption!.textContent = photos[currentIndex].caption;
  }

  function showNext() {
    currentIndex = (currentIndex + 1) % photos.length;
    lightboxImage.src = photos[currentIndex].src;
    lightboxCaption!.textContent = photos[currentIndex].caption;
  }

  document.querySelectorAll('[data-lightbox-trigger], [data-lightbox-trigger-grid]').forEach(el => {
    el.addEventListener('click', () => {
      const index = parseInt(el.getAttribute('data-index') || '0');
      openLightbox(index);
    });
  });

  closeBtn?.addEventListener('click', closeLightbox);
  prevBtn?.addEventListener('click', showPrev);
  nextBtn?.addEventListener('click', showNext);

  lightbox?.addEventListener('click', (e) => {
    if (e.target === lightbox) closeLightbox();
  });

  document.addEventListener('keydown', (e) => {
    if (lightbox?.classList.contains('hidden')) return;
    if (e.key === 'Escape') closeLightbox();
    if (e.key === 'ArrowLeft') showPrev();
    if (e.key === 'ArrowRight') showNext();
  });

  // Горизонтальный скролл: индикаторы N8 (штили/фейдеры)
  const scrollContainer = document.querySelector('.gallery-scroll');
  const dots = document.querySelectorAll('.scroll-dot');
  
  function updateIndicators(activeIndex: number) {
    dots.forEach((dot, i) => {
      if (i === activeIndex) {
        dot.classList.add('active');
      } else {
        dot.classList.remove('active');
      }
    });
  }
  
  // Инициализируем первый индикатор как активный
  updateIndicators(0);
  
  scrollContainer?.addEventListener('scroll', () => {
    const scrollLeft = scrollContainer.scrollLeft;
    const itemWidth = 384 + 16;
    const activeIndex = Math.round(scrollLeft / itemWidth);
    updateIndicators(activeIndex);
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      const itemWidth = 384 + 16;
      scrollContainer?.scrollTo({
        left: index * itemWidth,
        behavior: 'smooth'
      });
    });
  });

  // Показать/скрыть сетку
  const showAllBtn = document.getElementById('show-all-btn');
  const hideGridBtn = document.getElementById('hide-grid-btn');
  const galleryGrid = document.getElementById('gallery-grid');

  showAllBtn?.addEventListener('click', () => {
    galleryGrid?.classList.remove('hidden');
    galleryGrid?.scrollIntoView({ behavior: 'smooth' });
  });

  hideGridBtn?.addEventListener('click', () => {
    galleryGrid?.classList.add('hidden');
  });

  // Parallax эффект
  const parallaxBg = document.querySelector('.parallax-bg') as HTMLElement;
  
  function updateParallax() {
    if (!parallaxBg) return;
    const scrolled = window.scrollY;
    const rate = scrolled * 0.3;
    parallaxBg.style.transform = `translateY(${rate}px)`;
  }
  
  window.addEventListener('scroll', updateParallax, { passive: true });
  updateParallax();
</script>

