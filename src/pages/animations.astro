    /* ================================
       ANIMATION STYLES
       ================================ */
    
    /* Hidden state for all animated elements */
    .animate {
      opacity: 0;
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .animate.visible {
      opacity: 1;
    }
    
    /* 1. Fade In + Slide Up */
    .fade-up {
      transform: translateY(60px);
    }
    .fade-up.visible {
      transform: translateY(0);
    }
    
    /* 2. Fade In + Slide Left */
    .fade-left {
      transform: translateX(60px);
    }
    .fade-left.visible {
      transform: translateX(0);
    }
    
    /* 3. Scale + Fade */
    .scale-fade {
      transform: scale(0.85);
    }
    .scale-fade.visible {
      transform: scale(1);
    }
    
    /* 4. Blur Reveal */
    .blur-reveal {
      filter: blur(15px);
      transform: translateY(30px);
    }
    .blur-reveal.visible {
      filter: blur(0);
      transform: translateY(0);
    }
    
    /* 5. Stagger delays */
    .stagger-1 { transition-delay: 0ms; }
    .stagger-2 { transition-delay: 150ms; }
    .stagger-3 { transition-delay: 300ms; }
    .stagger-4 { transition-delay: 450ms; }
    .stagger-5 { transition-delay: 600ms; }
    .stagger-6 { transition-delay: 750ms; }
    .stagger-7 { transition-delay: 900ms; }
    .stagger-8 { transition-delay: 1050ms; }
    
    /* 6. Clip Reveal (text appears from bottom) */
    .clip-reveal {
      clip-path: inset(100% 0 0 0);
    }
    .clip-reveal.visible {
      clip-path: inset(0 0 0 0);
    }
    
    /* 7. Rotate + Fade */
    .rotate-fade {
      transform: rotate(-5deg) translateY(30px);
    }
    .rotate-fade.visible {
      transform: rotate(0) translateY(0);
    }
    
    /* Line animation */
    .line-animate {
      width: 0;
      height: 1px;
      background: rgba(255,255,255,0.3);
      margin: 2rem auto;
      transition: width 1.2s ease-out;
    }
    .line-animate.visible {
      width: 150px;
    }
    
