---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Concert from '../components/Concert.astro';
import About from '../components/About.astro';
import Musicians from '../components/Musicians.astro';
import Releases from '../components/Releases.astro';
import Projects from '../components/Projects.astro';
import Watch from '../components/Watch.astro';
import Merch from '../components/Merch.astro';
import Contact from '../components/Contact.astro';
import { getTourForLang, getConcertForLang } from '../data/concerts';

const lang = 'ru';

// Данные о концертах из централизованного модуля
const tour = getTourForLang(lang);
const concert = getConcertForLang(lang);
---

<Layout title="Nomusicians — Электроника и неоклассика">
  <Header currentLang={lang} />
  <main>
    <Hero lang={lang} />
    
    {tour ? (
      <Concert lang={lang} tour={tour} />
    ) : concert ? (
      <Concert lang={lang} {...concert} />
    ) : null}
    
    <About lang={lang} />
    
    <Musicians lang={lang} />
    
    <Releases lang={lang} />
    
    <Projects lang={lang} />
    
    <Watch lang={lang} />
    
    <Merch lang={lang} />
    
    <Contact lang={lang} />
  </main>
</Layout>
