---
import Layout from '../../../../layouts/Layout.astro';
import Header from '../../../../components/Header.astro';

const lang = 'cn';

const project = {
  title: 'Camp Klassika',
  subtitle: '燃烧者节日音乐节目',
  years: '2019—2024',
  heroImage: '/projects/camp-klassika.jpg',
  description: `
    Klassika是Nomusicians为燃烧者社区节日创建的音乐节目：
    Ogonek（夏季）和Kholodok（冬季）。自2019年以来，我们一直在举办露天音乐会，
    在电子和原声交汇处创造独特的氛围。
  `,
  stats: [
    { value: '10+', label: '音乐会' },
    { value: '6', label: '年' },
    { value: '2', label: '节日' },
  ],
  videos: [
    {
      title: 'Ogonek 2024: 四重奏',
      embedId: 'PzFOKI7Ezl0',
    },
    {
      title: 'Ogonek 2023: 现场',
      embedId: 'MkBzeE7Wye4',
    },
  ],
  gallery: [
    '/projects/camp-klassika.jpg',
    '/releases/ogonek-23.jpg',
    '/hero.jpg',
  ],
};
---

<Layout title={`${project.title} — Nomusicians`}>
  <Header currentLang={lang} />
  
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="relative h-[60vh] min-h-[400px] overflow-hidden">
      <div class="absolute inset-0">
        <img 
          src={project.heroImage} 
          alt={project.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-background via-background/50 to-transparent"></div>
      </div>
      
      <div class="relative z-10 flex items-end h-full pb-12 px-6">
        <div class="max-w-4xl mx-auto w-full">
          <a 
            href="/cn/#projects" 
            class="inline-flex items-center gap-2 text-sm text-white/60 hover:text-white mb-4 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
            </svg>
            返回项目
          </a>
          <h1 class="text-4xl md:text-6xl font-light tracking-wide mb-4" style="font-family: var(--font-logo);">
            {project.title}
          </h1>
          <p class="text-xl text-white/70 mb-2">{project.subtitle}</p>
          <p class="text-sm text-white/50 tracking-wider uppercase">{project.years}</p>
        </div>
      </div>
    </section>
    
    <!-- Stats -->
    <section class="py-12 px-6 border-b border-white/10">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-3 gap-8 text-center">
          {project.stats.map((stat) => (
            <div>
              <p class="text-3xl md:text-4xl font-light tracking-wide">{stat.value}</p>
              <p class="text-sm text-muted mt-1">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Description -->
    <section class="py-16 px-6">
      <div class="max-w-3xl mx-auto">
        <p class="text-lg leading-relaxed text-text/80">
          {project.description}
        </p>
      </div>
    </section>
    
    <!-- Videos -->
    <section class="py-16 px-6 bg-surface/30">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-light tracking-wide text-center mb-12">
          视频
        </h2>
        
        <div class="grid md:grid-cols-2 gap-8">
          {project.videos.map((video) => (
            <div class="group">
              <div class="aspect-video bg-surface overflow-hidden relative">
                <div class="absolute inset-0 z-10 bg-background/20 group-hover:bg-transparent transition-all duration-500"></div>
                <iframe
                  src={`https://www.youtube.com/embed/${video.embedId}`}
                  title={video.title}
                  class="w-full h-full grayscale group-hover:grayscale-0 transition-all duration-500"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                ></iframe>
              </div>
              <p class="text-sm text-muted mt-3 text-center">{video.title}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Gallery -->
    <section class="py-16 px-6">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-light tracking-wide text-center mb-12">
          图库
        </h2>
        
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          {project.gallery.map((image, index) => (
            <div class:list={[
              "overflow-hidden",
              index === 0 && "col-span-2 row-span-2"
            ]}>
              <img 
                src={image} 
                alt={`${project.title} photo ${index + 1}`}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                loading="lazy"
              />
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Back Link -->
    <section class="py-16 px-6 text-center">
      <a 
        href="/cn/#projects" 
        class="inline-flex items-center gap-2 text-white/60 hover:text-white transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
        </svg>
        返回项目
      </a>
    </section>
    
    <!-- Footer -->
    <footer class="py-8 px-6 text-center text-muted text-sm border-t border-white/10">
      <p>© 2025 Nomusicians. 保留所有权利。</p>
    </footer>
  </main>
</Layout>

<style>
  @import '../../../../styles/global.css';
</style>

