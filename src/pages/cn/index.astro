---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Hero from '../../components/Hero.astro';
import Concert from '../../components/Concert.astro';
import About from '../../components/About.astro';
import Musicians from '../../components/Musicians.astro';
import Releases from '../../components/Releases.astro';
import Projects from '../../components/Projects.astro';
import Watch from '../../components/Watch.astro';
import Merch from '../../components/Merch.astro';
import Contact from '../../components/Contact.astro';

const lang = 'cn';

// Concert data (will be from Sanity later)
const concert = {
  date: '11月15日',
  time: '18:30',
  city: '葡萄牙里斯本',
  venue: '双重音乐会',
  description: '电子、新古典与极简主义 / Radiohead致敬',
  isPast: true,
};
---

<Layout title="Nomusicians — 电子与新古典音乐">
  <Header currentLang={lang} />
  <main>
    <Hero lang={lang} imageUrl="/hero.jpg" />
    
    <Concert 
      lang={lang}
      date={concert.date}
      time={concert.time}
      city={concert.city}
      venue={concert.venue}
      description={concert.description}
      isPast={concert.isPast}
    />
    
    <About lang={lang} />
    
    <Musicians lang={lang} />
    
    <Releases lang={lang} />
    
    <Projects lang={lang} />
    
    <Watch lang={lang} />
    
    <Merch lang={lang} />
    
    <Contact lang={lang} />
  </main>
</Layout>
