---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getEvents, type SanityEvent } from '../lib/sanity';

const lang = 'ru';

// Получаем все события из Sanity
const sanityEvents = await getEvents();

// Функция форматирования даты
function formatDate(dateStr: string, lang: string, includeYear = false): string {
  const date = new Date(dateStr);
  const months: Record<string, string[]> = {
    ru: ['января', 'февраля', 'марта', 'апреля', 'мая', 'июня', 'июля', 'августа', 'сентября', 'октября', 'ноября', 'декабря'],
    en: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
    cn: ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月'],
  };
  const day = date.getDate();
  const month = months[lang]?.[date.getMonth()] || months.ru[date.getMonth()];
  
  if (includeYear) {
    return `${day} ${month} ${date.getFullYear()}`;
  }
  return `${day} ${month}`;
}

// Преобразуем события
const events = sanityEvents.map((e: SanityEvent) => {
  const city = e.city?.[lang] || e.city?.ru || '';
  const venue = e.venue?.[lang] || e.venue?.ru || '';
  const description = e.description?.[lang] || e.description?.ru || '';
  
  // Для концертов формируем место (Площадка, Город)
  const location = (e.eventType === 'concert' && (venue || city)) 
    ? [venue, city].filter(Boolean).join(', ') 
    : '';
  
  return {
    type: e.eventType,
    title: e.title?.[lang] || e.title?.ru || '',
    location,
    description,
    date: e.date,
    dateFormatted: formatDate(e.date, lang),
    time: e.time || null,
    year: new Date(e.date).getFullYear(),
    buttonText: e.buttonText?.[lang] || e.buttonText?.ru || 'Подробнее',
    buttonUrl: e.url || '#',
    isFuture: e.isFuture,
  };
});

// Группируем по периодам
const futureEvents = events.filter(e => e.isFuture);
const pastEventsByYear = events
  .filter(e => !e.isFuture)
  .reduce((acc, event) => {
    const year = event.year;
    if (!acc[year]) acc[year] = [];
    acc[year].push(event);
    return acc;
  }, {} as Record<number, typeof events>);

// Сортируем годы по убыванию
const years = Object.keys(pastEventsByYear).map(Number).sort((a, b) => b - a);

// Типы для фильтров
const filters = [
  { key: 'all', label: 'Всё' },
  { key: 'concert', label: 'Концерты' },
  { key: 'news', label: 'Новости' },
];
---

<Layout title="Все события — Nomusicians" lang={lang}>
  <Header currentLang={lang} />
  
  <main class="pt-24 pb-20">
    <div class="max-w-4xl mx-auto px-6">
      
      <!-- Заголовок -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-light tracking-wide mb-4" style="font-family: var(--font-logo);">
          Все события
        </h1>
        <p class="text-muted">
          Концерты, релизы и новости
        </p>
      </div>
      
      <!-- Фильтры -->
      <div class="flex flex-wrap justify-center items-center gap-x-1 gap-y-2 mb-12" id="filters">
        {filters.map((filter, index) => (
          <>
            <button 
              class={`text-sm transition-all filter-btn px-2 py-1 bg-transparent border-0 cursor-pointer ${index === 0 ? 'text-white' : 'text-white/40 hover:text-white'}`}
              data-filter={filter.key}
            >
              {filter.label}
            </button>
            {index < filters.length - 1 && <span class="text-white/20">·</span>}
          </>
        ))}
      </div>
      
      <!-- События -->
      <div id="events-list">
        
        <!-- Скоро -->
        {futureEvents.length > 0 && (
          <div class="mb-12 section-group" data-section="future">
            <p class="text-muted text-sm tracking-[0.2em] uppercase mb-6">Скоро</p>
            
            <div class="grid gap-4">
              {futureEvents.map((event) => (
                <a 
                  href={event.buttonUrl}
                  class="event-item group flex items-center justify-between py-4 px-6 border border-white/20 hover:border-white/30 hover:bg-white/5 transition-all no-underline"
                  data-type={event.type}
                >
                  <div class="text-left flex-1 min-w-0 pr-4">
                    <p class="text-white font-light flex items-center gap-2">
                      <span>
                        {event.title}
                        {event.location && <span class="text-white/50"> | {event.location}</span>}
                      </span>
                      <svg class="w-5 h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2zm6-6v-5c0-3.07-1.63-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.64 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"/>
                      </svg>
                    </p>
                    {event.description && <p class="text-muted text-sm">{event.description}</p>}
                  </div>
                  
                  <div class="flex items-center gap-4 flex-shrink-0 min-w-[260px] justify-end">
                    <div class="text-right">
                      <p class="text-white text-sm">{formatDate(event.date, lang, true)}</p>
                      {event.time && <p class="text-muted text-xs">{event.time}</p>}
                    </div>
                    <span class="px-3 py-1.5 border border-white/30 text-white text-xs tracking-wider uppercase whitespace-nowrap group-hover:bg-white group-hover:text-black transition-all ">
                      {event.buttonText} →
                    </span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}
        
        <!-- Прошедшие по годам -->
        {years.map((year) => (
          <div class="mb-12 section-group" data-section={year}>
            <p class="text-muted text-sm tracking-[0.2em] uppercase mb-6">{year}</p>
            
            <div class="grid gap-4">
              {pastEventsByYear[year].map((event) => (
                <a 
                  href={event.buttonUrl}
                  class="event-item group flex items-center justify-between py-4 px-6 border border-white/10 hover:border-white/30 hover:bg-white/5 transition-all no-underline opacity-60 hover:opacity-100"
                  data-type={event.type}
                >
                  <div class="text-left flex-1 min-w-0 pr-4">
                    <p class="text-white font-light">
                      {event.title}
                      {event.location && <span class="text-white/50"> | {event.location}</span>}
                    </p>
                    {event.description && <p class="text-muted text-sm">{event.description}</p>}
                  </div>
                  
                  <div class="flex items-center gap-4 flex-shrink-0 min-w-[260px] justify-end">
                    <div class="text-right">
                      <p class="text-white text-sm">{event.dateFormatted}</p>
                    </div>
                    <span class="px-3 py-1.5 border border-white/30 text-white text-xs tracking-wider uppercase whitespace-nowrap group-hover:bg-white group-hover:text-black transition-all ">
                      {event.buttonText} →
                    </span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))}
        
      </div>
      
    </div>
  </main>
  
  <Footer />
</Layout>

<style>
  a {
    text-decoration: none !important;
  }
  
  .filter-btn {
    background: transparent !important;
    border: none !important;
    outline: none !important;
  }
  
  .event-item.hidden {
    display: none;
  }
  
  .section-group.hidden {
    display: none;
  }
</style>

<script>
  // Фильтрация событий
  const filterBtns = document.querySelectorAll('.filter-btn');
  const eventItems = document.querySelectorAll('.event-item');
  const sectionGroups = document.querySelectorAll('.section-group');
  
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = (btn as HTMLElement).dataset.filter;
      
      // Обновляем активную кнопку
      filterBtns.forEach(b => {
        b.classList.remove('text-white');
        b.classList.add('text-white/40');
      });
      btn.classList.remove('text-white/40');
      btn.classList.add('text-white');
      
      // Фильтруем события
      eventItems.forEach(item => {
        const type = (item as HTMLElement).dataset.type;
        if (filter === 'all') {
          item.classList.remove('hidden');
        } else if (filter === 'concert' && type === 'concert') {
          item.classList.remove('hidden');
        } else if (filter === 'news' && type !== 'concert') {
          // "Новости" показывает всё кроме концертов
          item.classList.remove('hidden');
        } else {
          item.classList.add('hidden');
        }
      });
      
      // Скрываем пустые секции
      sectionGroups.forEach(section => {
        const visibleItems = section.querySelectorAll('.event-item:not(.hidden)');
        if (visibleItems.length === 0) {
          section.classList.add('hidden');
        } else {
          section.classList.remove('hidden');
        }
      });
    });
  });
</script>

