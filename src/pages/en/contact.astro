---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { t } from '../../i18n/translations';

const lang = 'en';
---

<Layout title="Contact — Nomusicians" lang={lang}>
  <Header currentLang={lang} />
  
  <main class="pt-24 pb-16 min-h-screen flex flex-col">
    <section class="px-6 flex-1 flex items-center justify-center">
      <div class="max-w-2xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-light tracking-wide mb-8" style="font-family: var(--font-logo);">
          {t(lang, 'contact.title')}
        </h1>
        
        <p class="text-muted text-lg mb-12">{t(lang, 'contact.booking')}</p>
        
        <a href="mailto:mail@nomusicians.com" class="block text-2xl md:text-3xl text-white hover:text-muted transition-colors mb-12">
          mail@nomusicians.com
        </a>
        
        <div class="flex flex-wrap items-center justify-center gap-4 mb-16">
          <a href="#" target="_blank" rel="noopener noreferrer"
            class="inline-flex items-center gap-3 px-6 py-3 border border-white/30 text-white hover:bg-white hover:text-black transition-all duration-300">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
            </svg>
            {t(lang, 'contact.presskit')}
          </a>
          <a href="#" target="_blank" rel="noopener noreferrer"
            class="inline-flex items-center gap-3 px-6 py-3 border border-white/30 text-white hover:bg-white hover:text-black transition-all duration-300">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 13l-3 3m0 0l-3-3m3 3V9"></path>
            </svg>
            {t(lang, 'contact.presentation')}
          </a>
        </div>
        
        <div class="flex items-center justify-center gap-8">
          <a href="https://t.me/nomusicians" target="_blank" rel="noopener noreferrer" class="text-muted hover:text-white transition-colors" aria-label="Telegram">
