                  <h3 class="text-2xl font-light tracking-wide text-white">{getLocalized(person, 'name')}</h3>
                  <p class="text-lg text-muted">{getLocalized(person, 'role')}</p>
                  {getLocalized(person, 'instruments') && <p class="text-sm text-white/50 tracking-wider">{getLocalized(person, 'instruments')}</p>}
                  {getLocalized(person, 'bio') && <p class="text-base leading-relaxed text-text/80">{getLocalized(person, 'bio')}</p>}
                  
                  {person.links && person.links.length > 0 && (
                    <div class="flex flex-wrap gap-3 justify-center md:justify-start items-center">
                      {person.links.map(link => {
                        if (link.type === 'telegram') {
                          if (!isTelegramChannel(link) || !link.url) return null;
                          return (
