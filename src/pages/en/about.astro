<Layout title="About — Nomusicians" lang={lang}>
  <Header currentLang={lang} />
  
  <main class="pt-24 pb-16">
    <!-- Hero -->
    <section class="px-6 mb-16">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-light tracking-wide mb-6" style="font-family: var(--font-logo);">
          {t(lang, 'about.title')}
        </h1>
      </div>
    </section>

    <!-- О музыке -->
    <section class="px-6 mb-20">
      <div class="max-w-3xl mx-auto space-y-6 text-lg leading-relaxed">
        <p class="text-white" set:html={t(lang, 'about.p1')} />
        <p class="text-muted" set:html={t(lang, 'about.p2')} />
        <p class="text-muted" set:html={t(lang, 'about.p3')} />
        <p class="text-muted" set:html={t(lang, 'about.p4')} />
      </div>
    </section>

    <!-- Фото -->
    <section class="px-6 mb-20">
      <div class="max-w-5xl mx-auto">
        <img 
          src="/history/band-early.jpg" 
          alt="Nomusicians"
          class="w-full aspect-[21/9] object-cover grayscale"
        />
      </div>
    </section>

    <!-- История -->
    <section class="px-6 mb-20">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-2xl font-light tracking-wide mb-8 text-center">{t(lang, 'history.title')}</h2>
        <div class="space-y-4 text-lg leading-relaxed text-muted">
          <p set:html={t(lang, 'history.p1')} />
          <p set:html={t(lang, 'history.p2')} />
          <p set:html={t(lang, 'history.p3')} />
        </div>
      </div>
    </section>

    <!-- ========== ЛЮДИ ========== -->

    <!-- Заголовок Musicians -->
    {(nomusicians.length > 0 || family.length > 0) && (
      <section class="px-6 mb-12">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-2xl font-light tracking-wide text-center">Musicians</h2>
        </div>
      </section>
    )}

    <!-- Разделитель Nomusicians -->
    {nomusicians.length > 0 && (
      <div class="max-w-5xl mx-auto px-6 mb-20">
        <div class="border-t border-white/10 relative">
          <span class="absolute left-1/2 -translate-x-1/2 -translate-y-1/2 bg-background px-4 text-muted text-sm tracking-widest">
            NOMUSICIANS
          </span>
        </div>
      </div>
    )}

    <!-- Nomusicians -->
    {nomusicians.length > 0 && (
      <section class="mb-20">
        <div class="max-w-5xl mx-auto px-6">
          <div class="space-y-16">
            {nomusicians.map((person, index) => (
              <div 
                id={person.slug?.current || person._id}
                class:list={[
                  "flex flex-col items-center gap-8",
                  index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'
                ]}
              >
                <div class="w-full md:w-1/2">
                  <div class="aspect-square overflow-hidden group">
                    {person.photo ? (
                      <img 
                        src={urlFor(person.photo).width(600).url()} 
                        alt={getLocalized(person, 'name')}
                        class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
                        loading="lazy"
                      />
                    ) : (
                      <div class="w-full h-full bg-surface flex items-center justify-center">
                        <span class="text-6xl text-white/20">{getLocalized(person, 'name')[0]}</span>
                      </div>
                    )}
                  </div>
                </div>
                
                <div class="w-full md:w-1/2 text-center md:text-left space-y-4">
                  <h3 class="text-2xl font-light tracking-wide text-white">{getLocalized(person, 'name')}</h3>
                  <p class="text-lg text-muted">{getLocalized(person, 'role')}</p>
                  {getLocalized(person, 'instruments') && <p class="text-sm text-white/50 tracking-wider">{getLocalized(person, 'instruments')}</p>}
                  {getLocalized(person, 'bio') && <p class="text-base leading-relaxed text-text/80">{getLocalized(person, 'bio')}</p>}
                  
                  {person.links && person.links.length > 0 && (
                    <div class="flex flex-wrap gap-3 justify-center md:justify-start items-center">
                      {person.links.map(link => {
                        if (link.type === 'telegram') {
                          if (!isTelegramChannel(link) || !link.url) return null;
                          return (
                            <a 
                              href={link.url} 
                              target="_blank" 
                              rel="noopener noreferrer"
                              class="social-link text-white/50 hover:text-white transition-colors no-underline"
                            >
                              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
