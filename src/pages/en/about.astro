---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { t } from '../../i18n/translations';
import { getNomusicians, getFamily, getTeam, getTeamRoleOrder, urlFor, teamRoleNames } from '../../lib/sanity';

const lang = 'en';

// Получаем данные из Sanity
const nomusicians = await getNomusicians();
const family = await getFamily();
const team = await getTeam();
const roleOrder = await getTeamRoleOrder();

// Группируем команду по ролям
const teamByRole = team.reduce((acc, person) => {
  const role = person.teamRole || 'other';
  if (!acc[role]) acc[role] = [];
  acc[role].push(person);
  return acc;
}, {} as Record<string, typeof team>);

// Получаем порядок ролей
const orderedRoles = roleOrder.length > 0 
  ? roleOrder.map(r => r.roleKey).filter(key => teamByRole[key]?.length > 0)
  : Object.keys(teamByRole).filter(key => teamByRole[key]?.length > 0);

// Helper для локализованных полей
function getLocalized(person: any, field: string): string {
  // Для EN: сначала ищем поле с суффиксом En, потом базовое
  const enField = person[field + 'En'];
  if (enField) return enField;
  return person[field] || '';
}

// Helper для иконок
function getLinkIcon(type: string): string {
  switch(type) {
    case 'youtube': return '▶';
    case 'website': return '◎';
    default: return '→';
  }
}

// Проверка: это канал Telegram или личный аккаунт?
function isTelegramChannel(link: any): boolean {
  if (link.type !== 'telegram') return false;
  const url = link.url || '';
  const label = link.label || '';
  return label.toLowerCase() !== 'telegram' || 
         url.includes('_channel') || 
         url.includes('channel');
}
