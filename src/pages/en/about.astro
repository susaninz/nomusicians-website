                              );
                            }
                            if (link.type === 'instagram' && link.url) {
                              return (
                                <a 
                                  href={link.url} 
                                  target="_blank" 
                                  rel="noopener noreferrer"
                                  class="text-white/40 hover:text-white transition-colors no-underline"
